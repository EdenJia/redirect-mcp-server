{
    "name": "mcp-server",
    "version": "0.1.0",
    "description": "A Model Context Protocol server example",
    "private": true,
    "type": "module",
    "bin": {
        "mcp-server": "./build/index.js"
    },
    "files": [
        "build"
    ],
    "scripts": {
        "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
        "prepare": "npm run build",
        "watch": "tsc --watch",
        "inspector": "nodemon --watch src/index.ts --exec \"tsc && npx @modelcontextprotocol/inspector node build/index.js\""
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "0.6.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
